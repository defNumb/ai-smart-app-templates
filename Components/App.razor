<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
    <script>
        function toggleNav() {
            var nav = document.querySelector('.nav-scrollable');
            var display = window.getComputedStyle(nav).display;
            nav.style.display = display === 'none' ? 'block' : 'none';
        }

    </script>
    <script>
        function updateWindowSize() {
            document.getElementById('width').textContent = window.innerWidth;
            document.getElementById('height').textContent = window.innerHeight;
        }

        // Update on window resize
        window.addEventListener('resize', updateWindowSize);

        // Update on load
        window.addEventListener('load', updateWindowSize);
    </script>

</body>

</html>
